<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BADCF8"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/motivational_image"
        android:layout_width="298dp"
        android:layout_height="200dp"
        android:contentDescription="Motivational Image"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/motivational_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A883AF"
        android:text="Believe you can \nand\n you're halfway there!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:background="#852020"
        android:layout_marginTop="20dp"/>

</LinearLayout>
